extends ../includes/dashbar
append content
	script.
		var topname = "linkHistPedidos-top";
		var sidename = "linkHistPedidos-side";
	script.
		var copyText;
		var small;
		document.addEventListener('copy', function (e) {
			e.clipboardData.setData('text/plain', 'http://nvio.cl/track/' + copyText.innerText);
			e.preventDefault();
		});

		function copyAsLink(clickedElement) {
			copyText = clickedElement;
			document.execCommand('copy');
			console.log('Copied the text: ' + copyText.innerText);

			small = document.getElementById('SMALLMAN');
			small.className = '';
			small.innerText= 'Copied the text: ' + copyText.innerText;
			setTimeout(clearSmall, 2000);
		}

		function clearSmall(){
			small.className = 'hidden';
			small.innerText = '';
		}
	h1.landing-head.text-center
		| #{title}
	small(id = 'SMALLMAN').hidden  
	table.table.table-bordered.table-striped
		thead
			tr
				th(scope='col') Tracking #
				th(scope='col') Nombre Pedido
				th(scope='col') Descripción
				th(scope='col') Despacho hacia
				th(scope='col') Fecha de creación
				th(scope='col') Status
				th(scope='col') Fecha de delivery
				th(scope='col') Costo NVIO
		tbody
			each ORD, index in orders
				tr
					th(scope='row' id = 'ORDHEAD_' + index)
						a(onclick='copyAsLink(this)' id = 'ORDCLICK_' + index).btn #{companyId + ORD.SK.S.replace("ORDER#","")}
					td #{ORD.orderName.S}
					td #{ORD.orderDesc.S}
					td #{ORD.toAddress.S}
					td #{new Date(parseInt(ORD.createdAt.N)).getDate()}/#{new Date(parseInt(ORD.createdAt.N)).getMonth() + 1}/#{new Date(parseInt(ORD.createdAt.N)).getFullYear()}
					td #{ORD.status.N}
					td #{new Date(parseInt(ORD.createdAt.N)).getDate()}/#{new Date(parseInt(ORD.createdAt.N)).getMonth() + 1}/#{new Date(parseInt(ORD.createdAt.N)).getFullYear()}
					td #{ORD.orderValue.N}
