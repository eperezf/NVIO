extends ../includes/dashbar
append content
	script.
		var topname = "linkEnvio-top";
		var sidename = "linkEnvio-side";
	h1.landing-head.text-center
		| #{title}
	.container
		form(action='/dashboard/nuevo-envio' method='POST' enctype='multipart/form-data')
			.form-group
				label Nombre Destinatario
				input#nameDest.form-control(type='text' name="nameDest" required)
			.form-group
				label Dirección Destinatario
				input#toAddress.form-control(type='text' name="toAddress" required)
			.row
				.col-sm-6
					.form-group
						label(for='toLocality') Comuna Destinatario
						select#toLocality.form-control(type='text' name="localityListTo" required)
							option(value = '' disabled selected hidden) Selecciona una comuna
							option Cerrillos
							option Cerro Navia
							option Conchalí
							option El Bosque
							option Estación Central
							option Huechuraba
							option Independencia
							option La Cisterna
				.col-sm-6
					.form-group
						label Apartado Destinatario (Opcional)
						input#toApart.form-control(type='text' name="toApart" placeholder='Número Depto, Condominio, Piso, etc.')
			.form-group
				label Teléfono Destinatario
				.input-group
					.input-group-prepend
						.input-group-text +56
					input#toPhone.form-control(type='text' name="contactDest" required oninvalid='this.setCustomValidity("El número debe tener 9 números")' onchange='try{setCustomValidity("")}catch(e){}' oninput='setCustomValidity("")' pattern='[0-9]{9}')
			.form-group
				label Dirección de Origen
				input#fromAddress.form-control(type='text' name="fromAddress" value=companyAddress required)
			.row
				.col-sm-6
					.form-group
						label(for='fromLocality') Comuna de Origen
						select#fromLocality.form-control(type='text' name="localityListFrom" required)
							option(value = '' disabled selected hidden) Selecciona una comuna
							option Cerrillos
							option Cerro Navia
							option Conchalí
							option El Bosque
							option Estación Central
							option Huechuraba
							option Independencia
							option La Cisterna
				.col-sm-6
					.form-group
						label Apartado Origen (Opcional)
						input#fromApart.form-control(type='text' name="fromApart" value=companyAddressApart placeholder='Número Depto, Condominio, Piso, etc.')
			.form-group
				label Nombre de tu Pedido
				input#orderName.form-control(type='text' name="orderName" required)
				small Este nombre es para que puedas llevar registro por tu cuenta a la par con nuestro sistema
			.form-group
				.row
					.col-sm-5
						label ¿Qué es lo que contiene tu envío?
						input#orderDesc.form-control(type='text' name="orderDesc" required oninvalid='this.setCustomValidity("Debes rellenar este campo con al menos 4 caracteres")' onchange='try{setCustomValidity("")}catch(e){}' pattern='[\\p{L}\d\.\-\_ ]{4,}')
						small Describe aquí tu paquete, recuerda seguir nuestras 
							a(href='/recomendaciones' target='_blank') recomendaciones
					.col-sm-4
						label Valor de lo que envías
						.input-group
							.input-group-prepend
								.input-group-text $
							input#orderValue.form-control(type='number' name="orderValue" required oninvalid='this.setCustomValidity("El valor debe ser mayor a cero")' onchange='try{setCustomValidity("")}catch(e){}' pattern='^[1-9]\\d*$')
						small Valor en pesos chilenos
					.col-sm-3
						label Costo NVIO
						input#shippingCost.form-control(type='text' name="shippingCost" disabled)
						small Calculado según el destino y origen
			.form-group
				label Comentarios adicionales (Opcional)
				input#extraComments.form-control(type='text' name="comment")
				small Puedes ingresar algún comentario en caso de necesitarlo
			.form-check
				input#tosAgree.form-check-input(type='checkbox' name="tos" value="true" required)
				label.form-check-label(for='tosAgree') Acepto los 
					a(href='/tos' target='_blank') términos y condiciones
			button#submitOrder.btn.btn-primary(type='submit' onclick='' style='margin-top: 20px;') Enviar