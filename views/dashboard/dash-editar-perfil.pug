extends ../includes/dashbar
append content
	script.
		var topname = "linkPerfil-top";
		var sidename = "linkPerfil-side";
	.container(style='margin-top: 40px;')
		a.grey-link.float-right(href='/dashboard/perfil' style='font-size: 25px;')
			| Cancelar 
			i.fa.fa-times(style='font-size: 30px;')
		img.rounded.text-left(src='https://via.placeholder.com/250' alt='')
		//- The action is the URL the post will be sent to
		form#editProfileInfo.edit-profile-form(action='/dashboard/editar-perfil' style='margin-top: 30px;' method='post' enctype='multipart/form-data')
			//- Add values in the proper attribute through a query to the DB, maybe store them in cache
			.form-group#companyName-group
				label(for='companyName') Nombre Empresa
				input#companyName.form-control(type='text' name='companyName' value=companyName required oninvalid='this.setCustomValidity("El nombre de la compañía debe tener al menos dos caracteres")' onchange='try{setCustomValidity("")}catch(e){}' oninput='setCustomValidity("")' pattern='[\\p{L}\d\.\-\_ ]{2,}')
			.form-group#companyRut-group
				label(for='companyRut') RUT Empresa
				input#companyRut.form-control(type='text' name='companyRut' value=companyRut required oninvalid='this.setCustomValidity("El formato del RUT no es válido")' onchange='try{setCustomValidity("")}catch(e){}' oninput='setCustomValidity("")' pattern='^0*(\\d{1,3}(\\.?\\d{3})*)\\-?([\\dkK])$')
			.form-group#companyTurn-group
				label(for='companyTurn') Giro Empresa
				input#companyTurn.form-control(type='text' name='companyTurn' value=companyTurn required oninvalid='this.setCustomValidity("El giro de la compañía debe tener al menos dos caracteres")' onchange='try{setCustomValidity("")}catch(e){}' oninput='setCustomValidity("")' pattern='[\\p{L}\d\.\-\_ ]{2,}')
				small Tu Giro de Empresa según el SII
			.form-group#companyRepresentative-group
				label(for='companyRepresentative') Nombre Representante
				input#companyRepresentative.form-control(type='text' name='companyRepresentative' value=companyRepresentative required oninvalid='this.setCustomValidity("El nombre del representante debe tener al menos tres caracteres")' onchange='try{setCustomValidity("")}catch(e){}' oninput='setCustomValidity("")' pattern='[\\p{L}\- ]{3,}')
			.form-group#contactNumber-group
				label(for='contactNumber') Teléfono de Contacto
				input#contactNumber.form-control(type='text' name='companyContactNumber' value=companyContactNumber required oninvalid='this.setCustomValidity("El número debe tener al menos 7 caracteres numéricos")' onchange='try{setCustomValidity("")}catch(e){}' oninput='setCustomValidity("")' pattern='[0-9]{7,}')
			.form-group#email-group
				label(for='email') Email de Contacto
				input#email.form-control(type='email' name='companyEmail' value=companyEmail required oninvalid='this.setCustomValidity("Por favor ingresa un formato de correo válido")' onchange='try{setCustomValidity("")}catch(e){}' oninput='setCustomValidity("")')
				small Este correo de contacto puede distinto a tu correo para ingresar a NVIO, cambiar esto no afecta el correo que usas para iniciar sesión aquí
			button.btn.btn-primary(type='submit') Guardar Cambios
